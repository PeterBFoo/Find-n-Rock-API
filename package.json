{
  "name": "find-n-rock-api",
  "version": "1.0.0",
  "description": "API REST for the Find-n-Rock application",
  "main": "app.js",
  "scripts": {
    "build": "cross-env NODE_ENV=prod && npx tsc",
    "deploy": "sudo docker build -t peterbfoo/find-n-rock-back .",
    "test": "cross-env NODE_ENV=test && npm run drop:test && npm run seed:test && jest --forceExit --detectOpenHandles --runInBand",
    "test:build": "cross-env NODE_ENV=test && npm run build && npm run drop:test && npm run seed:test && jest --forceExit --detectOpenHandles --runInBand",
    "start": "cross-env Node_ENV=prod && nodemon dist/app.js",
    "start:prod": "cross-env NODE_ENV=prod pm2 start dist/app.js --name find-n-rock-api",
    "dev": "cross-env NODE_ENV=dev concurrently \"npx tsc --watch\" \"nodemon -q dist/app.js\"",
    "seed:prod": "cross-env NODE_ENV=prod concurrently \"npx tsc\" \"node dist/src/db/runSeeders.js\"",
    "seed:dev": "cross-env NODE_ENV=dev concurrently \"npx tsc\" \"node dist/src/db/runSeedersProd.js\"",
    "reseed:dev": "npm run drop:dev && npm run seed:dev",
    "reseed:prod": "npm run drop:prod && npm run seed:prod",
    "drop:dev": "cross-env NODE_ENV=dev concurrently \"npx tsc\" \"node dist/src/db/dropTables.js\"",
    "drop:prod": "cross-env NODE_ENV=prod concurrently \"npx tsc\" \"node dist/src/db/dropTables.js\"",
    "seed:test": "cross-env NODE_ENV=test node dist/src/db/runSeeders.js",
    "drop:test": "cross-env NODE_ENV=test node dist/src/db/dropTables.js"
  },
  "author": "PeterBFoo",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openapi": "^12.1.0",
    "jsonwebtoken": "^9.0.0",
    "mailman": "file:app/src/utils/mailman",
    "pg": "^8.10.0",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.12",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  }
}
